    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Django",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/server/manage.py",
            "args": [
                "runserver",
                "0.0.0.0:8000"
