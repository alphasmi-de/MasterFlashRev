            "django": true,
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "VIRTUAL_ENV": "${workspaceFolder}/server/venv312"
            },
            "python": "${workspaceFolder}/server/venv312/Scripts/python.exe"
        }
    ]
}
